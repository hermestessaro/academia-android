<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
        android:id="@+id/day_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="S"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/day_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="T"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_1"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/day_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="Q"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_2"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/day_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="Q"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_3"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/day_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="S"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_4"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/day_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="S"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_5"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/day_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:text="D"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/day_6"
        app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>